@model IEnumerable<newproj.Models.Users>
@{

}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <h2 class="text-center mb-4">Users List</h2>

            <div class="d-flex justify-content-end mb-3">
                <a class="btn btn-success" asp-controller="User" asp-action="UserCreate">Add New User</a>
            </div>

            <table class="table table-bordered table-hover table-striped table-fixed text-center align-middle">
                <thead class="thead-dark">
                    <tr>
                        <th>User ID</th>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th>Address</th>
                        <th>Password</th>
                        <th>Profile Picture</th>
                        <th>Date of Birth</th>
                        <th>Gender</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.userId</td>
                            <td>@item.FullName</td>
                            <td>@item.Email</td>
                            <td>@item.Address</td>
                            <td>@item.Password</td>
                            <td>
                                <img src="~/@Url.Content(item.ProfilePicture)" class="img-fluid" style="width: 60px; height: 60px;" />
                            </td>
                            <td>@item.DOB.ToShortDateString()</td>
                            <td>@item.Gender</td>
                            <td>
                                <div class="d-flex justify-content-center">
                                    <a class="btn btn-sm btn-primary mx-1" asp-controller="User" asp-action="UserEdit" asp-route-id="@item.userId">Edit</a>

                                    <a class="btn btn-sm btn-info mx-1" asp-controller="User" asp-action="UserDetails" asp-route-id="@item.userId">Details</a>

                                    <a class="btn btn-sm btn-danger mx-1" asp-controller="User" asp-action="UserDelete" asp-route-id="@item.userId" onclick="return confirm('Are you sure you want to delete this user?');">Delete</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
